<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asp.sampleapp.HomeActivity">

    <!--//seukuran dengan toolbar-->
    <!--?attr/actionBarSize-->

    <TextView
        android:onClick="about"
        android:text="Application Info"
        android:textSize="17sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/txtAppVersion"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <ScrollView
        android:layout_above="@id/txtAppVersion"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cv1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_below="@id/imgAvatar"
                        android:id="@+id/txtAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Avatar"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textSize="20sp"/>

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="20dp"
                        android:src="@drawable/av_2" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cv2"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_below="@id/imgAvatar2"
                        android:id="@+id/txtAvatar2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Avatar"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textSize="20sp"/>

                    <ImageView
                        android:id="@+id/imgAvatar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="20dp"
                        android:src="@drawable/av_2" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
